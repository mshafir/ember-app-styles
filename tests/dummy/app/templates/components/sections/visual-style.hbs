{{#freestyle-section name='Visual Style' as |section|}}

	{{#section.subsection name='Typography'}}

		{{#freestyle-usage 'typography-lato' title='Lato' hasCode=false}}
			{{freestyle-typeface fontFamily='Lato'}}
		{{/freestyle-usage}}

		{{#freestyle-usage 'typography-source-sans-pro' title='Source Sans Pro' hasCode=false}}
			{{freestyle-typeface fontFamily='Source Sans Pro'}}
		{{/freestyle-usage}}

		{{#freestyle-usage 'font-size-classes' title='Font size' highlightJsTheme='atom-one-light'}}
			<div class="font-sm">Small Font</div>
			<div class="font-md">Medium Font</div>
			<div class="font-lg">Large Font</div>
		{{/freestyle-usage}}

		{{#freestyle-usage 'letter-spacing-classes' title='Letter spacing'}}
			<div class="letter-spacing-sm">Small Letter Spacing</div>
			<div class="letter-spacing-md">Medium Letter Spacing</div>
			<div class="letter-spacing-lg">Large Letter Spacing</div>
		{{/freestyle-usage}}

		{{#freestyle-usage 'font-styles' title='Font styling'}}
			<div class="small-caps">Small Caps</div>
			<div class="lowercase">Lowercase</div>
			<div class="uppercase">Uppercase</div>
		{{/freestyle-usage}}

	{{/section.subsection}}

	{{#section.subsection name='Color'}}

		{{#freestyle-usage 'color-class-usage' title='Color class usage'}}
			<div class='fg-green square'>Text Color</div>
			<div class='bg-green fg-white square'>Background Color</div>
			<div class='border-green fg-green square'>Border Color</div>
		{{/freestyle-usage}}

		{{#freestyle-usage 'border-side-color-class-usage' title='Border side class usage'}}
			<div class='border-left-blue fg-blue square'>Left Border</div>
			<div class='border-bottom-blue fg-blue square'>Bottom Border</div>
			<div class='border-right-blue fg-blue square'>Right Border</div>
			<div class='border-top-blue fg-blue square'>Top Border</div>
		{{/freestyle-usage}}

		{{#freestyle-usage 'fp' title='Base App Color Palette' usageTitle='Usage' hasCode=false}}
			{{freestyle-palette
				colorPalette=(hash
					white=(hash name='white' base='#ffffff')
					black=(hash name='black' base='#222222')
					gray=(hash name='gray' base='#f5f5f5')
					silver=(hash name='silver' base='#dddddd')

					blue=(hash name='blue' base='#4078c0')
					green=(hash name='green' base='#6cc644')
					red=(hash name='red' base='#bd2c00')
					orange=(hash name='orange' base='#c9510c')
					purple=(hash name='purple' base='#6e5494')
					yellow=(hash name='yellow' base='#ffd36b')
				)
				title='App Color Palette'
				description='An alternate color palette, based on github primer css framework'
			}}
		{{/freestyle-usage}}

		{{#freestyle-usage 'color-adjust' title='Color Adjustment'}}
			<div class="square bg-darkestgreen fg-white">Darkest Green</div>
			<div class="square bg-darkergreen fg-white">Darker Green</div>
			<div class="square bg-darkgreen">Dark Green</div>
			<div class="square bg-green">Green</div>
			<div class="square bg-lightgreen">Light Green</div>
			<div class="square bg-lightergreen">Lighter Green</div>
			<div class="square bg-lightestgreen">Lightest Green</div>
		{{/freestyle-usage}}
	{{/section.subsection}}

{{/freestyle-section}}
